<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Mpc.XamSyncfusion"
             x:Class="Mpc.XamSyncfusion.MainPage"
             Title="MPC Samples">

  <StackLayout Orientation="Vertical">

    <Label Text="MPC"
           HorizontalOptions="Center"
           FontSize="Large"
           FontAttributes="Bold" />

    <Label Text="Xamarin with SyncFusion"
       HorizontalOptions="Center"
       FontSize="Small" />

    <Button x:Name="btnNumericUpDown"
            Text="NumericUpDown"
            Clicked="btnSfNumericUpDownClicked" />
  </StackLayout>
</ContentPage>
