                            <local:CustomTextBlock x:Name="Date" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="{TemplateBinding VerticalAlignment}"  FontSize="{TemplateBinding FontSize}" Margin="10,0,0,0" FontWeight="Light" Foreground="{TemplateBinding TextForeground}" 
                                                   DateTimeValue="{TemplateBinding DateText}" MonthDateFormat="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},Path= MonthDateFormat}"
                                                   DateTimeFormat="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},Path= MonthDateFormat}" FontFamily="Segoe UI"  />
